<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SummaryLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProfileHighlightsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/SummaryMainPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/SummaryInfoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="265dp">

            <TextView
                android:id="@+id/SummaryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Missionary Name"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="54dp" />

            <ImageView
                android:id="@+id/SummaryMissionaryImg"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@android:drawable/sym_def_app_icon"
                tools:layout_editor_absoluteX="123dp"
                tools:layout_editor_absoluteY="122dp" />

            <TextView
                android:id="@+id/SummaryMissionField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mission Field"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="77dp"
                tools:layout_editor_absoluteY="232dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SummaryPrayerPanel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SummaryPraises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/summary_praises"
                android:textAlignment="center"
                android:textAllCaps="true" />

            <LinearLayout
                android:id="@+id/SummaryPraiseList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/SummaryPrayerReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/summary_prayer_requests"
                android:textAlignment="center"
                android:textAllCaps="true" />

            <LinearLayout
                android:id="@+id/SummaryPList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>